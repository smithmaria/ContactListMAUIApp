<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ContactListApp.MainPage">

    <ScrollView>
        <CollectionView x:Name="contactsCltnView" SelectionMode="Single" SelectionChanged="contactsCltnView_SelectionChanged">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border  Stroke="Transparent" Padding="10" Margin="0,0,0,1">
                        <HorizontalStackLayout Spacing="15">
                            <Image Source="{Binding ProfileImage}" HeightRequest="50" WidthRequest="50"/>
                            <Label Text="{Binding Name}" VerticalOptions="Center" />
                        </HorizontalStackLayout>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </ScrollView>

</ContentPage>
