<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ContactListApp.ContactDetailPage"
             Title="Contact Details">
    <VerticalStackLayout Padding="20">
        <Button x:Name="btnReturn"
                Clicked="btnReturn_Clicked"
                Text="Return to Contacts"/>
        <Image x:Name="imgContact" Margin="15" HeightRequest="300"/>
        <Label x:Name="lblName" FontSize="Title"/>
        <Label x:Name="lblDescription" FontAttributes="Italic"/>
        <Label x:Name="lblEmail" FontSize="Medium"/>
        <Label x:Name="lblPhone" FontSize="Medium"/>
    </VerticalStackLayout>
</ContentPage>